<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-5 mt-3">Signup On &nbsp;&nbsp;<i class="fa-regular fa-compass"></i>WanderLust</h1>
    <hr>
    <div class="col-6 offset-3 mt-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                name="username"
                id="username"
                type="text"
                class="form-control"
                required
                />
                <div class="valid-feedback">Looks Good!</div>

                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input
                    name="email"
                    id="email"
                    type="email"
                    class="form-control"
                    required
                    />

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input
                        name="password"
                        id="password"
                        type="password"
                        class="form-control"
                        required
                        />
                        <br>
                        <button class="btn btn-dark add-btn">Signup</button>
                        <br>
                        <hr>
                        <br><br>
            </div>
        </form>
    </div>
</div>